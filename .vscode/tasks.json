{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run MATLAB current file",
      "type": "shell",
      "command": "D:\\MATLAB\\R2023b\\bin\\matlab.exe",
      "args": [
        "-batch",
        "run('${file}')"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run in shared MATLAB (via Python)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "& '${workspaceFolder}\\scripts\\run_matlab.ps1' '${file}'"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
